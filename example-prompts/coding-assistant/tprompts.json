{
  "name": "AI Coding Assistant",
  "description": "Comprehensive coding assistant with memory management and best practices",
  "version": "1.0.0",
  "editors": {
    "vscode": {
      "system-prompt.md": {
        "location": ".vscode/ai-assistant.md",
        "prefix": "---\napplyTo: '**'\nrole: 'system'\n---\n\n"
      },
      "coding-rules.md": {
        "location": ".vscode/coding-standards.md",
        "prefix": "# Project Coding Standards\n\n"
      }
    },
    "cursor": {
      "system-prompt.md": {
        "location": ".cursorrules",
        "prefix": "// AI Coding Assistant Rules\n// Auto-generated by tprompts\n\n"
      },
      "coding-rules.md": {
        "location": ".cursor/coding-standards.md"
      }
    },
    "windsurf": {
      "system-prompt.md": {
        "location": ".windsurf/rules.md"
      },
      "coding-rules.md": {
        "location": ".windsurf/standards.md",
        "prefix": "# Windsurf Coding Standards\n\n",
        "suffix": "\n\n---\nGenerated by tprompts"
      }
    },
    "claude-code": {
      "system-prompt.md": {
        "location": "CLAUDE.md",
        "prefix": "# Claude Code Assistant\n\n"
      }
    }
  }
}